            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒买哦"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒买哦"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒买哦"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>

</LinearLayout>